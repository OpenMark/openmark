<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2.2.dtd">
<web-app>
	<display-name>OpenMark test navigator</display-name>

	<servlet>
		<servlet-name>Navigator</servlet-name>
		<servlet-class>om.tnavigator.NavigatorServlet</servlet-class>
	   	<!-- By default we use the existing handleSummary implementation
	    unless this is specified as true -->
	    <!-- init-param>
			<param-name>useNewHandleSummaryTableImplementation</param-name>
			<param-value>true</param-value>
	    </init-param-->
	</servlet>

	<!-- Give servlet all URLs -->
	<servlet-mapping>
		<servlet-name>Navigator</servlet-name>
		<url-pattern></url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Navigator</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Navigator</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
</web-app>
