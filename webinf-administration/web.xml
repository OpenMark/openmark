<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2.2.dtd">
    
	<web-app>
		<display-name>OpenMark Administration</display-name>
		<servlet>
			<servlet-name>AdministractionServlet</servlet-name>
			<servlet-class>om.administration.AdministrationServlet</servlet-class>
		</servlet>
		<!-- Give servlet all URLs -->
		<servlet-mapping>
			<servlet-name>AdministractionServlet</servlet-name>
			<url-pattern></url-pattern>
		</servlet-mapping>
		<servlet-mapping>
			<servlet-name>AdministractionServlet</servlet-name>
			<url-pattern>/</url-pattern>
		</servlet-mapping>
		<servlet-mapping>
			<servlet-name>AdministractionServlet</servlet-name>
			<url-pattern>/*</url-pattern>
		</servlet-mapping>
	</web-app>
